<h1>Productos</h1>

{{#if products.length}}

    {{#each products}}

        <div class="product-container">
            <h3>{{title}}</h3>
            <img src="{{thumbnail}}">
            <p>{{description}}</p>
            <h4>Categor√≠a: {{category}}</h4>
            <h4>${{price}}</h4>
            <h5>Cantidad en stock: {{stock}}</h5>
            <button id={{id}}>Agregar al carrito</button>
        </div>

    {{/each}}

{{else}}

    <h2>NO HAY PRODUCTOS</h2>

{{/if}}